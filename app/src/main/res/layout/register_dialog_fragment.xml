<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.75">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/registerImage"
                android:layout_weight="1" />

            <Button
                android:text="@string/ui_register_choose_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/btnChooseImage"
                android:layout_weight="2.9"
                android:textAllCaps="false"
                android:layoutDirection="rtl"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/txtUserName"
                android:hint="@string/ui_register_user_name"
                android:layout_weight="1" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/txtPassword"
                android:hint="@string/ui_register_password"
                android:textAlignment="textEnd"
                android:layout_weight="1" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/txtPasswordConfirmation"
                android:hint="@string/ui_register_password_confirmation"
                android:textAlignment="textEnd"
                android:layout_weight="1" />

        </LinearLayout>
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/txtEmail"
        android:hint="@string/ui_register_email_address"
        android:layout_weight="1.05" />

    <CheckBox
        android:text="@string/ui_register_add_confirm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cbAddsConfirm"
        android:layoutDirection="rtl"
        android:textAlignment="textStart"
        android:layout_weight="1.1" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.05">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtLastName"
            android:layout_weight="1"
            android:hint="@string/ui_register_last_name" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtFirstName"
            android:hint="@string/ui_register_first_name"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:weightSum="1"
        android:textDirection="rtl">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:id="@+id/txtDateOfBirth"
            android:gravity="right|center_vertical|center"
            android:hint="@string/ui_register_birth_date"
            android:textSize="18sp"
            android:layout_weight="0.08" />

        <EditText
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/ageError"
            android:textDirection="rtl"
            android:gravity="right|center_vertical"
            android:background="@android:color/transparent"
            android:visibility="gone" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/calendar"
            android:id="@+id/imageButton"
            android:layout_gravity="right|center_vertical"
            android:layout_marginLeft="5dp"
            android:visibility="gone" />
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/txtPhone1"
        android:hint="@string/ui_register_phone_number"
        android:layout_weight="1.05" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.1">

        <CheckBox
            android:text="@string/ui_register_phone_privacy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/cbPhone1Privacy"
            android:layout_weight="2.5"
            android:textAlignment="textStart"
            android:layoutDirection="rtl"
            android:layout_marginRight="15dp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layoutDirection="rtl"
            android:paddingEnd="12dp"
            android:id="@+id/phone1Group"
            android:textDirection="rtl">

            <RadioButton
                android:text="@string/ui_register_phone_type_mobile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/radioButton5"
                android:layout_weight="1"
                android:textDirection="rtl"
                android:layoutDirection="rtl"
                android:tag="mobile" />

            <RadioButton
                android:text="@string/ui_register_phone_type_office"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/radioButton6"
                android:layout_weight="1"
                android:layoutDirection="rtl"
                android:tag="office" />

            <RadioButton
                android:text="@string/ui_register_phone_type_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/radioButton4"
                android:layout_weight="1"
                android:layoutDirection="rtl"
                android:tag="home" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.05">

        <Button
            android:text="@string/ui_register_btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btnCancelRegister"
            android:layout_weight="1" />

        <Button
            android:text="@string/ui_register_btn_submit_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btnSubmit"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>