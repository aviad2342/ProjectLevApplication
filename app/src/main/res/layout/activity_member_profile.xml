<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_member_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="app.projectlevapplication.viewComponents.MemberProfileActivity"
    android:layout_weight="1"
    android:layoutDirection="rtl"
    android:textDirection="rtl">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textDirection="rtl">

        <ImageView
            android:layout_width="137dp"
            android:layout_height="125dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/profileImage" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textDirection="rtl">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/txtMemberName"
                    android:textDirection="rtl"
                    android:gravity="center_vertical"
                    android:layout_weight="1" />

                <TextView
                    android:text="@string/member_profile_full_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/textView7"
                    android:textAllCaps="false"
                    android:textDirection="rtl"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:textDirection="rtl">

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/txtBirthDate"
                    android:textDirection="rtl"
                    android:gravity="center_vertical"
                    android:layout_weight="1" />

                <TextView
                    android:text="@string/member_profile_birth_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/textView5"
                    android:textDirection="rtl"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layoutDirection="rtl">

                <TextView
                    android:text="@string/member_profile_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/textView"
                    android:textDirection="rtl"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/txtGender"
                    android:textDirection="rtl"
                    android:gravity="center_vertical"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="47dp">

        <TextView
            android:text="TextView"
            android:layout_width="286dp"
            android:layout_height="match_parent"
            android:id="@+id/txtEmail"
            android:textDirection="rtl"
            android:gravity="center_vertical"
            android:layout_weight="1" />

        <TextView
            android:text="@string/member_profile_email_address"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView3"
            android:textDirection="rtl"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:textColor="@android:color/black"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="43dp">

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/txtMebmberPhoneNumber"
            android:layout_weight="1"
            android:gravity="center_vertical" />

        <TextView
            android:text="@string/member_profile_Phone_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView13"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:paddingLeft="5dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/txtMemberAddress"
            android:layout_weight="1"
            android:gravity="center_vertical" />

        <TextView
            android:text="@string/member_profile_address"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView19"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:paddingLeft="5dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/txtMemberJoinDate"
            android:layout_weight="1"
            android:gravity="center_vertical" />

        <TextView
            android:text="@string/member_profile_join_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView21"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:paddingLeft="5dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:visibility="invisible"
        android:id="@+id/adminViewStatus">

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/txtMemberStatus"
            android:layout_weight="1"
            android:gravity="center_vertical" />

        <TextView
            android:text="@string/member_profile_status"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView4"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:paddingLeft="5dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:visibility="invisible"
        android:id="@+id/adminViewSubscription">

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/txtMemberEndSubscriptionDate"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textDirection="rtl" />

        <TextView
            android:text="@string/member_profile_end_subscription_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView23"
            android:gravity="center_vertical"
            android:textDirection="rtl"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:paddingLeft="5dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:id="@+id/adminViewBtn">

        <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:layout_weight="1"
            android:layout_gravity="bottom" />

        <Button
            android:text="@string/member_profile_btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnEditMember"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:textStyle="bold"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>
