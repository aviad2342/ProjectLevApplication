<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_member_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="app.projectlevapplication.viewComponents.MemberProfileActivity"
    android:layout_weight="1"
    android:layoutDirection="rtl"
    android:textDirection="rtl">

    <ImageView
        android:layout_width="165dp"
        android:layout_height="137dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/profileImage"
        android:layoutDirection="rtl"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_vertical|start"
        android:padding="5dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:textDirection="rtl">

        <TextView
            android:text="TextView"
            android:layout_width="294dp"
            android:layout_height="match_parent"
            android:id="@+id/txtMemberName"
            android:textDirection="rtl"
            android:gravity="center_vertical"
            android:layout_weight="1" />

        <TextView
            android:text="@string/member_profile_full_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView7"
            android:textAllCaps="false"
            android:textDirection="rtl"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:textColor="@android:color/black"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="37dp">

        <TextView
            android:text="TextView"
            android:layout_width="290dp"
            android:layout_height="match_parent"
            android:id="@+id/txtBirthDate"
            android:textDirection="rtl"
            android:gravity="center_vertical"
            android:layout_weight="1" />

        <TextView
            android:text="@string/member_profile_birth_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView5"
            android:textDirection="rtl"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:textColor="@android:color/black"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:text="TextView"
            android:layout_width="286dp"
            android:layout_height="match_parent"
            android:id="@+id/txtEmail"
            android:textDirection="rtl"
            android:gravity="center_vertical"
            android:layout_weight="1" />

        <TextView
            android:text="@string/member_profile_email_address"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView3"
            android:textDirection="rtl"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:textColor="@android:color/black"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layoutDirection="rtl">

        <TextView
            android:text="@string/member_profile_gender"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView"
            android:textDirection="rtl"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/txtGender"
            android:textDirection="rtl"
            android:gravity="center_vertical"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>
