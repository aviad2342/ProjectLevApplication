<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        app:srcCompat="@drawable/pn_logo" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/loginUserName"
        android:hint="@string/login_user_name_label"
        android:layout_gravity="right"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:layoutDirection="ltr" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/loginPassword"
        android:layout_weight="1"
        android:hint="@string/login_user_password_label"
        android:textDirection="rtl"
        android:layout_gravity="right"
        android:layout_marginTop="5dp"
        android:textAlignment="textEnd"
        android:layoutDirection="ltr" />

    <Button
        android:text="@string/login_log_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/btnLogin"
        android:layout_weight="1"
        android:layout_gravity="right"
        android:textStyle="bold"
        android:textSize="18sp" />

    <Button
        android:text="@string/login_cancel_log_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/btnCancel"
        android:layout_weight="1"
        android:layout_gravity="right"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="5dp" />

    <TextView
        android:text="@string/login_register_label"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:id="@+id/registerLink"
        android:textDirection="rtl"
        android:gravity="center_vertical"
        android:clickable="true"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold"
        android:layout_gravity="right"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp" />
</LinearLayout>