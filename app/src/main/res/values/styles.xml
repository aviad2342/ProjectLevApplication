<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/CustomActionBar</item>
    </style>

    <style name="CustomActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textDirection">rtl</item>
        <item name="android:layoutDirection">rtl</item>

    </style>

    <style name="MyActionButtonStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layoutDirection">rtl</item>
    </style>

    <style name="MyAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--  <item name="android:actionButtonStyle">@style/MyActionButtonStyle</item> -->
         <item name="colorPrimary">@android:color/holo_purple</item>
         <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
         <item name="colorAccent">@color/colorAccent</item>
        <item name="android:layoutDirection">ltr</item>
        <item name="android:dropDownItemStyle">@style/CustomActionBar</item>
         <!--<item name="android:layoutDirection">ltr</item>-->
          <!--<item name="android:textDirection">ltr</item>-->
         <item name="android:popupMenuStyle">@style/CustomActionBar</item>
        <item name="android:itemBackground">@color/itemBack</item>
        <item name="android:itemTextAppearance">@style/CustomActionBar</item>
     </style>

     <style name="AppTheme.NoActionBar">
         <item name="windowActionBar">false</item>
         <item name="windowNoTitle">true</item>
     </style>

     <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

     <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
 </resources>
